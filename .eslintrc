{
  "parser": "babel-eslint",
  "root": true,
  "extends": [
    "@mutantlove/eslint-config/targets/react",
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "react/no-unknown-property": ["error", { ignore: ["class"] }]
  },
  "settings": {
    "react": {
      "version": "detect",
    },

    // Recommended if you use eslint_d
    "import/cache": {
      "lifetime": 5,
    },
  }
}
